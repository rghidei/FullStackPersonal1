<!doctype html>
<html>
<head>
    <title>Kitty Cafe</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body id="profile1">
<div class="container">
    <div id="cashierInput" class="jumbotron text-center">
        <p> Kitchen Login or Signup:</p>
        <a href="/login" class="btn btn-default"><span class="fa fa-user"></span>Login</a>
        <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span>Signup</a>
    </div>
</div>

<section id="cashier" class="CashierContainer">
   <form class="CashierTitle" action="/messages" method="POST">
     <input type="text" value="" placeholder="Customer Name" name="name">
     <input type="text" placeholder="Diary" name="order" >
     <br>
     <label name="banana" for="espresso">Banana</label>
     <input type="radio" value="banana"placeholder="banana" name="banana">
     <label for="caramel">Strawberry</label>
     <input type="radio" value="strawberry" placeholder="strawberry" name="strawberry">
     <label for="sugar">Mango</label>
     <input type="radio" value="mango" placeholder="mango" name="mango">

     <br>
     <select class="Size" name="size">
       <option  value="Small">Small</option>
       <option value="Large">Large</option>
     </select>
     <button type="submit">Submit</button>
   </form>
   </section>
</body>
</html>
